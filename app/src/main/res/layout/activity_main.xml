<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backg"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/lests">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/collegeLogo"
        android:layout_alignParentTop="true"
        android:src="@drawable/collegelogo"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/collegename"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_below="@+id/collegeLogo"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:singleLine="false"
        android:gravity="center" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="80dip"
        android:id="@+id/imageView2"
        android:src="@drawable/tcslogo"
        android:layout_marginTop="350dip"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/saying1"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logo"
        android:src="@drawable/lgo"
        android:layout_marginTop="170dip"
        android:layout_marginLeft="55dip"
        android:contentDescription="@string/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/TechAcme"
        android:id="@+id/techAcme"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/logo"
        android:layout_marginTop="230dip"
        android:layout_marginLeft="20dip"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/saying3"
        android:id="@+id/brought"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dip"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/letsStart"
        android:src="@drawable/letsstart"
        android:visibility="visible"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick" />

</RelativeLayout>
